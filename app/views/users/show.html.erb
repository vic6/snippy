
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <h2>Your snippets</h2>
  <div class="col-md-12">
    <% if @user.snippets.any? %>
    <ul class="users">
      <table class="table table-striped table-hover ">
      <thead>
        <tr class="bg-primary">
          <th>Title</th>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <%= render @snippets %>
    </ul>
    <% end %>
  </div>
</div>
